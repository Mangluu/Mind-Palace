<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Therapists">

    <TextView
        android:layout_width="match_parent"
        android:textSize="50dp"
        android:text="Our Experts!!!"
        android:textStyle="bold"
        android:id="@+id/tv1"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:text="CALL"
        android:id="@+id/call1"
        android:layout_below="@id/tv2"
        android:layout_height="wrap_content" />



    <Button
        android:layout_width="wrap_content"
        android:text="CHAT"
        android:id="@+id/chat1"
        android:layout_below="@id/tv2"
        android:layout_toRightOf="@id/call1"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_below="@id/tv1"
        android:id="@+id/tv2"
        android:textStyle="italic"
        android:text="Ms. Sushma Swaraj\n+91-9891969104\nNavin Hospital\nGr. Noida"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_below="@id/call1"
        android:textStyle="italic"
        android:id="@+id/tv3"
        android:text="Mr. Dheeraj Singhal\n+91-989177774\nKailash Hospital\nGr. Noida"

        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:text="CALL"
        android:id="@+id/call2"
        android:layout_below="@id/tv3"
        android:layout_height="wrap_content" />



    <Button
        android:layout_width="wrap_content"
        android:text="CHAT"
        android:id="@+id/chat2"
        android:layout_below="@id/tv3"
        android:layout_toRightOf="@id/call2"
        android:layout_height="wrap_content" />

</RelativeLayout>